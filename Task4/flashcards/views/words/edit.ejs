<div class="p-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/words/list">Words list</a></li>
          <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </nav>
    <h2 class="display-5">Edit word</h2>
    <form action="/words/update/<%= word.id %>" method="POST">
        <div class="form-group">
            <label for="nativeWord">PL</label>
            <input type="text" name="nativeWord" class="form-control" value="<%= word.nativeWord%>">
        </div>
        <div class="form-group">
            <label for="foreignWord">ENG</label>
            <input type="text" name="foreignWord" class="form-control" value="<%= word.foreignWord%>">
        </div>
        <div class="form-group">
            <label for="category">Level</label>
            <select class="form-control" name="category">
                <% categories.forEach((category)=>{ %>
                    <option value="<%= category.id%>"><%= category.name %></option>
                <% }) %>       
            </select>
        </div>
        <div class="form-group">
            <label for="advancement">Level</label>
            <select class="form-control" name="advancement">
                <% advancement.forEach((adv)=>{ %>
                    <option value="<%= adv.id%>" <%= adv.id === word.advancement ? 'selected=selected' : '' %>><%= adv.level %></option>
                <% }) %>       
            </select>
        </div>
        <input type="submit" value="Submit" class="btn btn-primary">
    </form>
</div>